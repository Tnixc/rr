---
import { notable_awards } from '../../content/_homepage_awards.ts';
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <div class="flex gap-10">
        <div class="banner">
          <img src="/images/first_icon.svg" class="frcLogo" alt="FRC Logo" />
          <div class="bannerTopText">
            <span>Winner</span>
          </div>
          <div class="bannerBottomText">
            <span>2022 St. Mary C.S.S. District</span>
          </div>
        </div>
      </div>
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">
        Notable awards | <a href="/awards" class="opacity-60 hover:underline">See all â†’</a>
      </h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          notable_awards.map((service) => (
            <div class="flex flex-col gap-4 rounded-3xl bg-primary-500/10 px-6 py-8 dark:bg-primary-400/10">
              <p class="text-sm">Year {service.year}</p>
              <div class="flex flex-col gap-2">
                <h3 class="text-2xl font-medium">{service.name}</h3>
                <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                  {service.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>../../content/_homepage_awards.ts
